<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        layout="@layout/register_bar" />

    <LinearLayout
        android:id="@+id/li_register"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/reg_phone_icon" />

        <EditText
            android:id="@+id/et_userEmail"
            style="@style/editStyle"
             android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:hint="@string/enter_register_email_hint"
            android:singleLine="true">
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:id="@+id/li_setting_pwd"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/reg_passward_icon" />

        <EditText
            android:id="@+id/et_userPwd"
            style="@style/editStyle"
            android:layout_width="0dp"
             android:gravity="bottom"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/user_register_setting_pwd"
            android:inputType="textPassword" 
            android:singleLine="true">
        </EditText>

        <ImageView
            android:id="@+id/img_showPwd"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_marginRight="12dp"
            android:layout_weight="0.2"
            android:layout_marginBottom="5dp"
            android:background="@drawable/reg_eye_before_icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:id="@+id/li_confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="bottom"
        android:layout_marginBottom="6dp" 
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/reg_passward_icon" />

        <EditText
            android:id="@+id/et_userRePwd"
            style="@style/editStyle"
            android:layout_width="0dp"
             android:gravity="bottom"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/user_register_confirm_pwd"
            android:inputType="textPassword" 
            android:singleLine="true">
        </EditText>

        <ImageView
            android:id="@+id/img_showRePwd"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_marginRight="12dp"
            android:layout_weight="0.2"
            android:layout_marginBottom="5dp"
            android:background="@drawable/reg_eye_before_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/line" />

    <TextView
        android:id="@+id/userRegister"
        style="@style/loginStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/user_login_btn"
        android:text="@string/user_register" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
        android:id="@+id/tv_goLogin"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:text="@string/user_login"
        android:layout_marginBottom="30dp" 
        android:textColor="#5b6481"
        android:textSize="15sp"/>
    </LinearLayout>
    
</LinearLayout>