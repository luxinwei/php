<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_city_title"
        style="@style/tvApplyListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="郑州" />
    
   <include
        android:layout_width="match_parent"
        android:layout_height="2dp"
        layout="@layout/line_view_light_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_school_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/qq_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_school_name"
                style="@style/tvApplyListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="郑州大学" />

            <TextView
                android:id="@+id/tv_school_address"
                style="@style/tvApplyListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="河南省科学大道100号" />
        </LinearLayout>

         <TextView
            android:id="@+id/tv_apply_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/tv_bord_red"
            android:text="删除"
             style="@style/tvApplyState"
            android:textColor="@color/GRB16" />
    </LinearLayout>
  <include
        android:layout_width="match_parent"
        android:layout_height="2dp"
        layout="@layout/line_view_light_gray" />
</LinearLayout>