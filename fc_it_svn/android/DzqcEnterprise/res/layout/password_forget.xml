<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include 
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        layout="@layout/register_bar"/>
    

    <LinearLayout
        android:id="@+id/li_email"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         android:gravity="bottom"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/reg_email_icon" />

        <EditText
            android:id="@+id/et_email"
            style="@style/editStyle"
            android:layout_width="0dp"
             android:gravity="bottom"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="@string/enter_forget_pwd_email_hint" 
            android:singleLine="true">
        </EditText>

        <TextView
            android:id="@+id/tv_findPwd_sendEmail"
            style="@style/reg_send_code"
            android:layout_width="wrap_content"
             android:layout_height="18dp"
             android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.1"
            android:text="@string/enter_forget_pwd_email" />
    </LinearLayout>

     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/line" />

        <LinearLayout
        android:id="@+id/li_ValicateCode"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         android:gravity="bottom"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/reg_key_icon" />

        <EditText
            android:id="@+id/et_findPwd_ValicateCode"
            style="@style/editStyle"
            android:layout_width="0dp"
             android:gravity="bottom"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="@string/certification_check_code" 
            android:inputType="number"
            android:singleLine="true">
        </EditText>

       
    </LinearLayout>

     <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/line" />
     
     <TextView
        android:id="@+id/tv_NextStep"
        style="@style/loginStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/user_login_btn"
        android:text="@string/certification_step_next" />
</LinearLayout>
