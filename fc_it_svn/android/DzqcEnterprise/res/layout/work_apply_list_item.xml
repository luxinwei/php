<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_apply_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/qq_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_apply_name"
                style="@style/tvApplyListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄广帅" />

            <TextView
                android:id="@+id/tv_apply_date"
                style="@style/tvApplyListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="申请时间：2016.06.13" />
        </LinearLayout>

         <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/work_apply_btn_status" />
    </LinearLayout>
  <include
        android:layout_width="match_parent"
        android:layout_height="2dp"
        layout="@layout/line_view_light_gray" />
</LinearLayout>