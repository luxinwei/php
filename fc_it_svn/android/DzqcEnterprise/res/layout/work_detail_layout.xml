<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GRB10"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        layout="@layout/register_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/GRB6"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tvComLogoFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/tv_bord_blue"
                    android:padding="2dp"
                    android:text="@string/work_enterprise" />

                <TextView
                    android:id="@+id/tv_header_title"
                    style="@style/tvComHeaderStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="数据库开发工程师" />

                <ImageView
                    android:id="@+id/img_com_msg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/iconfont_zaixianzixun" />
            </LinearLayout>

            <include
                android:layout_width="match_parent"
                android:layout_height="2dp"
                layout="@layout/line_view_light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_money"
                        style="@style/tvMoneyStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="500元" />

                    <TextView
                        android:id="@+id/tv_pay_type"
                        style="@style/tvPayTypeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text="(一次性支付)" />
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/GRB10" />

                <TextView
                    android:id="@+id/tv_already_account"
                    style="@style/tvMoneyStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="已有12人申请" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/GRB10" />

                <TextView
                    android:id="@+id/tv_leave_day"
                    style="@style/tvMoneyStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="剩余17天" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_publish"
                        style="@style/tvMoneyStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/work_publish_person" />

                    <TextView
                        android:id="@+id/tv_publish_person"
                        style="@style/tvPublistNameStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="郑州宇通客车股份有限公司" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/tvPublistContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/work_publish_date" />

                    <TextView
                        android:id="@+id/tv_date_show"
                        style="@style/tvPublistContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="2016-4-23" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content_title"
                    style="@style/tvPublistContentStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/work_publish_introduction" />

                <!-- 后台动态添加部分 -->

                <LinearLayout
                    android:id="@+id/li_publish_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvContentInfo"
                        style="@style/tvPublistContentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="1,参与架构设计" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_enable_request"
                    style="@style/tvPublistContentStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/work_publish_enable_request" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_enable_all"
                        style="@style/tvFontLookMoreStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_click"
                        android:gravity="center_vertical"
                        android:text="@string/work_publish_seeAll" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_file"
                    style="@style/tvMoneyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/work_publish_file" />

                <LinearLayout
                    android:id="@+id/li_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/lv_files"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_reSend"
                    style="@style/loginStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/user_login_btn"
                    android:text="重新推送"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- 申请人列表 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_apply_person"
                    style="@style/tvComHeaderStyle"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="申请人" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    layout="@layout/line_view_light_gray" />

                <LinearLayout
                    android:id="@+id/li_apply_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/applyListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_begin_work"
                    style="@style/tvButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_login_btn"
                    android:text="@string/work_begin"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_end_work"
                    style="@style/tvButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/user_login_btn"
                    android:text="@string/work_end"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>