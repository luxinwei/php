<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
    <item name="android:textSize">5sp</item>
    <item name="android:textColor">@color/GRB6</item>
     </style>
    
    <style name="smart_drop_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

       <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>
    
    <!-- 弹窗动画效果 -->
    <style name="pop_window_style" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_exit_bottom</item>
    </style>

    <!-- 发送验证码style -->
    <style name="reg_send_code">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/sms_send_code</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 登录/注册按钮样式 -->
    <style name="loginStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:height">49dp</item>
    </style>

    <style name="mProgress_horizontal">  
    <item name="android:indeterminateOnly">false</item>  
    <item name="android:progressDrawable">@drawable/progressbar_horizontal_style</item><!-- progress_horizontal -->  
    <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>  
    <item name="android:minHeight">20dip</item>  
    <item name="android:maxHeight">20dip</item>  
    </style>  
    
    <!-- 输入框字体样式 -->
    <style name="editStyle">
        <item name="android:textColor">@color/color_account</item>
