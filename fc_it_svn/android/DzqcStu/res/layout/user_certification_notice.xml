<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
 <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        layout="@layout/register_bar" />
    <ImageView
        android:layout_marginTop="106dp"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/ok_icon" />

    <TextView
        android:gravity="center"
        style="@style/tvCertificate_result_info"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:textScaleX="1.1"
        android:lineSpacingExtra="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/certificate_result_info" />
    
    <TextView
        android:id="@+id/tv_confirm"
        style="@style/loginStyle"
        android:layout_width="104dp"
        android:layout_height="32dp"
        android:background="@drawable/user_login_btn"
        android:text="@string/certificate_result_submit" />

</LinearLayout>