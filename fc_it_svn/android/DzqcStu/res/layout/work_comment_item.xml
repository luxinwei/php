<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Img_userIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/qq_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCommentName"
                style="@style/tv_mine_base_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginLeft="5dp"
                android:text="黄广帅" />

            <TextView
                android:id="@+id/tvCommentDate"
                style="@style/tv_comment_date_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="20160406" />
            
              <RatingBar
                android:id="@+id/ratingBar"
                style="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCommentName"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvCommentInfo"
        style="@style/tv_mine_work_status_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="201604062016040620160406201604062016040620160406" />

</LinearLayout>