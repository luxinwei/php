<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_innovation_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/myimg" />

        <TextView
            android:id="@+id/tv_innovation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

          <TextView
                    android:id="@+id/tv_innovation_Name"
                    android:layout_width="wrap_content"
                    style="@style/tv_mine_username_style"
                    android:layout_height="wrap_content"
                    android:text="黄广帅" />
             <TextView
                    android:id="@+id/tv_innovation_content"
                    style="@style/tvPositionStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="手游UI设计师" />
           
        </LinearLayout>
         <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical|right"
            android:orientation="vertical" >
               <TextView
                    android:id="@+id/tv_innovation_Date"
                    android:layout_width="wrap_content"
                      style="@style/tvDateStyle"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="11:30" />
                <ImageView
                    android:id="@+id/img_agreeAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/goodwell" />
                 <TextView
                    android:id="@+id/tv_innovation_sum"
                   style="@style/tvDateStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="共100赞" />
                </LinearLayout>
    </LinearLayout>

</LinearLayout>